<h1>Add Line Item to Inventory</h1>

<form action="/inventory" method="post">
  <div class="form-wrapper">

  <div class="form-el">
    <label for="part_number"> Part Number:</label>
    <input type="text" name="part_number" id="part_number"/>
  </div>

  <div class="form-el">
    <label for="manufacturer"> Select Manufacturer:</label>
    <select name="manufacturer" id="manufacturer">
      <option value="AMD">AMD</option>
      <option value="Cisco">Cisco</option>
      <option value="Dell">Dell</option>
      <option value="EMC">EMC</option>
      <option value="HP">HP</option>
      <option value="IBM">IBM</option>
      <option value="Intel">Intel</option>
      <option value="Seagate">Seagate</option>
      <option value="Western Digital">Western Digital</option>
    </select>
  </div>

  <div class="form-el">
    <label for="description"> Description:</label>
    <input type="text" name="description" id="description"/>
  </div>

  <div class="form-el">
    <label for="category"> Select Category:</label>
    <select name="category" id="category">
      <option value="CPU">CPU</option>
      <option value="HDD">HDD</option>
      <option value="RAM">RAM</option>
      <option value="SSD">SSD</option>
    </select>
  </div>

  <div class="form-el">
    <label for="condition"> Select Condition:</label>
    <select name="condition" id="condition">
      <option value="New">New</option>
      <option value="Refurb">Refurb</option>
      <option value="Used">Used</option>
    </select>
  </div>

  <div class="form-el">
    <label for="status"> Status:</label>
    <input readonly value="Inbound" name="status" id="status"/>
  </div>

  <div class="form-el">
    <label for="quantity"> Quantity:</label>
    <input type="number" name="quantity" id="quantity"/>
  </div>

  <div class="form-el">
    <label for="supplier_id">Select Supplier:</label>
      <select name="supplier_id" id="supplier_id">
        <% @suppliers.each do |supplier| %>
          <option value=<%= supplier.id %>><%= supplier.company_name %></option>
        <% end %>
      </select>
  </div>

  <div class="form-el">
    <label for="unit_buy_price"> Unit Buy Price:  $</label>
    <input type="number" min="0.01" step="0.01" name="unit_buy_price" id="unit_buy_price"/>
  </div>

  <div class="form-el">
    <label for="target_sell_price"> Target Sell Price:  $</label>
    <input <input type="number" min="0.01" step="0.01" name="target_sell_price" id="target_sell_price"/>
  </div>

  <div class="form-el">
    <label for="min_sell_price"> Minimum Sell Price:  $</label>
    <input <input type="number" min="0.01" step="0.01" name="min_sell_price" id="min_sell_price"/>
  </div>

  <div class="form-el">
    <input class="" type='submit' value="Create Line Item">
  </div>

  </div>

</form>
