<h1>Suppliers</h1>

<p class="">
  <a class=""href="/suppliers/new">New supplier</a>
</p>

<table style="width:100%">
  <tr>
    <th>Company</th>
    <th>Address</th>
    <th>Main Contact Name</th>
    <th>Contact Job Title</th>
    <th>Contact Phone Number</th>
  </tr>
  <% for supplier in @suppliers %>
  <tr>
    <td><a href="suppliers/<%= supplier.id %>"><%= supplier.company_name %></a>
    </td>
    <td><%= supplier.address %></td>
    <td><%= supplier.contact_name %></td>
    <td><%= supplier.contact_job_title%></td>
    <td><%= supplier.contact_phone_number %></td>
  </tr>
  <% end %>
</table>
